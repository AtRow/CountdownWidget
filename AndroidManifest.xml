<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ovio.countdown"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk android:minSdkVersion="7"/>

    <application android:label="@string/app_name">
        <activity
            android:name=".GreetingActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".WidgetPreferencesActivity"
            android:label="@string/preferences_activity_title">
            <intent-filter>
                <action android:name="android.apwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>

        <receiver
            android:name=".CountdownWidget"
            android:label="@string/widget_label">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="android.intent.action.USER_PRESENT"/>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/countdown-widget"
                />
        </receiver>
        <receiver android:name=".CountdownWidget"/>

    </application>
</manifest> 
